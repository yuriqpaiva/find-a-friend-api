// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  SUBSCRIBER
  ORGANIZATION
  ADMIN
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  role     UserRole @default(SUBSCRIBER)

  organization Organization?

  @@index([email])
  @@map("users")
}

enum PetSize {
  SMALL
  MEDIUM
  LARGE
}

enum Gender {
  MALE
  FEMALE
}

model Pet {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  color       String
  species     String
  gender      Gender
  age         Int
  size        PetSize
  adopted_at  DateTime?

  organization    Organization? @relation(fields: [organization_id], references: [id])
  organization_id Int

  @@map("pets")
}

model Organization {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  city        String
  state       String
  country     String
  address     String
  phone       String

  user_id Int   @unique
  user    User  @relation(fields: [user_id], references: [id])
  pets    Pet[]

  @@map("organizations")
}
